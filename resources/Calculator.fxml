<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.CalculatorController"
            stylesheets="@/style.css"
            styleClass="gradient-primary">

    <children>
        <VBox spacing="15" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20"
              AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20">

            <TextField fx:id="display" prefHeight="70"
                       styleClass="text-field shadow-lg rounded-lg"/>

            <GridPane hgap="10" vgap="10" styleClass="shadow-md">
                <columnConstraints>
                    <ColumnConstraints percentWidth="25"/>
                    <ColumnConstraints percentWidth="25"/>
                    <ColumnConstraints percentWidth="25"/>
                    <ColumnConstraints percentWidth="25"/>
                </columnConstraints>

                <!-- Первая строка -->
                <Button text="7" onAction="#onDigitClick"
                        styleClass="calc-button"
                        GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <Button text="8" onAction="#onDigitClick"
                        styleClass="calc-button"
                        GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                <Button text="9" onAction="#onDigitClick"
                        styleClass="calc-button"
                        GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                <Button text="/" onAction="#onOperationClick"
                        styleClass="calc-button calc-operator"
                        GridPane.rowIndex="0" GridPane.columnIndex="3"/>

                <!-- Вторая строка -->
                <Button text="4" onAction="#onDigitClick"
                        styleClass="calc-button"
                        GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <Button text="5" onAction="#onDigitClick"
                        styleClass="calc-button"
                        GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                <Button text="6" onAction="#onDigitClick"
                        styleClass="calc-button"
                        GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                <Button text="*" onAction="#onOperationClick"
                        styleClass="calc-button calc-operator"
                        GridPane.rowIndex="1" GridPane.columnIndex="3"/>

                <!-- Третья строка -->
                <Button text="1" onAction="#onDigitClick"
                        styleClass="calc-button"
                        GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <Button text="2" onAction="#onDigitClick"
                        styleClass="calc-button"
                        GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                <Button text="3" onAction="#onDigitClick"
                        styleClass="calc-button"
                        GridPane.rowIndex="2" GridPane.columnIndex="2"/>
                <Button text="-" onAction="#onOperationClick"
                        styleClass="calc-button calc-operator"
                        GridPane.rowIndex="2" GridPane.columnIndex="3"/>

                <!-- Четвёртая строка -->
                <Button text="0" onAction="#onDigitClick"
                        styleClass="calc-button"
                        GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <Button text="." onAction="#onDigitClick"
                        styleClass="calc-button"
                        GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                <Button fx:id="equalsButton" text="=" onAction="#onEqualsClick"
                        styleClass="calc-button calc-equals"
                        GridPane.rowIndex="3" GridPane.columnIndex="2"/>
                <Button text="+" onAction="#onOperationClick"
                        styleClass="calc-button calc-operator"
                        GridPane.rowIndex="3" GridPane.columnIndex="3"/>

                <!-- Пятая строка — очистка и назад -->
                <Button fx:id="clearButton" text="C" onAction="#onClearClick"
                        styleClass="calc-button calc-clear"
                        GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
                <Button text="Назад" onAction="#onBackClick"
                        styleClass="calc-button"
                        GridPane.rowIndex="4" GridPane.columnIndex="2" GridPane.columnSpan="2"/>
            </GridPane>

        </VBox>
    </children>
</AnchorPane>